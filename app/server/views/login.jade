	body
		nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
			.container
				.navbar-header
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/') Knowledge Base
				.collapse.navbar-collapse.navbar-ex1-collapse
					ul.nav.navbar-nav.navbar-right
						li
							a(href='/signup')
								| Create an Account

		.account-container.stacked
			#login.content.clearfix
				form(id='form-login', method='post')
					h1 Sign In
					.login-fields
						p Sign in using your registered account:
						.field
							label(for='user') Email:
							input#user-tf.form-control.input-lg.username-field(type='text', name='user', value='', placeholder='Email', required='required')
						.field
							label(for='pass') Password:
							input#pass-tf.form-control.input-lg.password-field(type='password', name='pass', value='', placeholder='Password', required='required')
					.login-actions
						span.login-checkbox
							input#remember-me.field.login-checkbox(name='remember-me', value='true', type='checkbox')
							label.choice(for='Field') Keep me signed in
						button.login-action.btn.btn-primary Sign In
		.login-extra
			| Don't have an account? 
			a(href='/signup') Sign Up
			br
			|   Remind 
			a#forgot-password(href='#') Password

		include modals/alert
		include modals/lost-password

		script(src='https://code.jquery.com/jquery-2.2.4.min.js', integrity='sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=', crossorigin='anonymous')
