
extends index_layout

block content

	.row
		.col-md-12.margin-top-40.padding-20
			form(action='/contactus', method='post')
				fieldset
					legend Contact Us
					label Name
					input.input-area(type='text', name='name', placeholder='Your Name', required='required')
					label Email
					input.input-area(type='text', name='email', placeholder='Your email', required='required')
					label Message:
					textarea#message.text-area(name='message', rows='7', cols='30')
					button.btn.btn-wide.btn-success(type='submit', value='Submit') Submit

block scripts
	script#LeadinEmbed-2363933(type='text/javascript', src='//js.leadin.com/js/v1/2363933.js', crossorigin='use-credentials', async='', defer='')
	script(src='http://knowledge-base.site/js/views/contactus.js')
