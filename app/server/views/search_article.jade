
extends layout

block content
	.row#article-grid
		.col-md-12
			.widget.stacked
				.widget-header
					i.icon-list
					h3 Search Articles
				.widget-content
					.page-header
						h3 Search results for '#{search}'
					- for art in cdata
						.col-md-12
							strong
								a(href='#')  #{art.title}
							article= art.article_plain.substr(1, 200) + '...'
							hr
	include modals/alert
	include modals/confirm

block scripts
	script(src='/js/views/search_article.js')
	script(src='/js/controllers/searchController.js')
